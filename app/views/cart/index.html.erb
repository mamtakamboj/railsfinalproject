<section>
			<div class="">
				<div class="container">
					<div class="heading text-center" style=" padding-top: 0px;" >
						<img class="dividerline" src="/assets/sep.png" alt="">
						<h2><b>CART</b></h2>
						<img class="dividerline" src="/assets/sep.png" alt="">	
					</div>
					<div class="row">
						<% if @cart.empty? %>
							<p>Your Cart is empty.</p>
						<% else %>
						<% total = 0 %>
						<table class="table table-striped">
							<thead>
								<tr>
									<th></th>
									<th>Item</th>
									<th>Price</th>
									<th>Qty</th>
									<th>Total</th>
									<th>Remove</th>
								</tr>
							</thead>
							 <tbody>
								<% @cart.each do | id, quantity | %>
								<% item = Item.find_by_id(id) %>
								<tr>
									<td><%= link_to (image_tag item.image_url, :style => "height:40px"), item %></td>
									<td><%= link_to item.title, item %></td>
									<td><%= number_to_currency(item.price) %></td>
									<td><%= quantity %></td>
									<td><%= number_to_currency(quantity * item.price, :unit => "€") %></td>
									<td><a href="/cart/remove/<%= item.id %>">Remove from Cart</a></td>
								</tr>
								<% total += quantity * item.price %>
								<% end %>
								<tr>
  									<td colspan="4">Total:</td>
 									 <td><%= number_to_currency(total, :unit => "€") %></td>
								</tr>
							</tbody>
						</table>
					</div>
					<hr>
					<a href="/cart/clear">
						<button type="submit" class="btn btn-warning" style="float:left;">Clear Cart</button>
					</a>
					<% end %>
					<a href="/items">
						<button type="submit" class="btn btn-warning" style="float:right;">Continue Shopping</button>
					</a> 

		<!--<%= link_to 'New Item', new_item_path %>-->
				</div>
			</div>
		</section><hr>
